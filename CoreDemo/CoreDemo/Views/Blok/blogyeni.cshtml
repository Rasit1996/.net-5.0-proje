@using EntityLayer.Entity
@model List<Blok>
@if(Model.Count>0){
	@foreach (var item in Model)
	{

		<div class="col-lg-4 card">
			<a href="single.html">
				<img src="/CoreBlogTema/Web/images/7.jpg" class="card-img-top img-fluid" alt="">
			</a>
			<div class="card-body">
				<ul class="blog-icons my-4">
					<li>
						<a href="#">
							<i class="far fa-calendar-alt"></i> Feb 20 .2018
						</a>
					</li>
					<li class="mx-2">
						<a href="#">
							<i class="far fa-comment"></i>@item.yorumcus.Count
						</a>
					</li>
					<li>
						<a href="#">
							<i class="fas fa-eye"></i>@item.kategori.Adi
						</a>
					</li>

				</ul>
				<h5 class="card-title">
					<a href="single.html">@item.Baslik</a>
				</h5>
				@if (item.İcerik.Count<char>() >= 25)
				{
					<p class="card-text mb-3">@item.İcerik.Substring(0, item.İcerik.Substring(0, 25).LastIndexOf(" "))...</p>
				}
				else
				{
					<p class="card-text mb-3">@item.İcerik</p>
				}

				<a href="/Blok/Detaylar/@item.ID" class="btn btn-primary read-m">Devamını Oku</a>
			</div>
		</div>
	}

}
else{
	<h1>Aradığınız öğeyi bulamadık!</h1>
}
