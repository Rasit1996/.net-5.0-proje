
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EntityLayer.Entity
@model Yazar
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form action="/Kayit/Index" method="post" >
					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Adı</label>

							<input type="text" class="form-control" id="validationDefault01" name="Adi" placeholder="" >
							@Html.ValidationMessageFor(x=>x.Adi,"",new {@style="color:red"})
						</div>
						
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">Soyadı</label>
							<input type="text" class="form-control" id="validationDefault02" name="Soyadi" placeholder="" >
							@Html.ValidationMessageFor(x=>x.Soyadi,"",new {@style="color:red"})
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">E-mail</label>

							<input type="text" class="form-control" id="validationDefault01" name="Mail" placeholder="" >
							@Html.ValidationMessageFor(x=>x.Mail,"",new {@style="color:red"})
						</div>
						<div class="form-group col-md-6 mb-3">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							@* <input type="password" class="form-control" name="Sifre" id="password1" placeholder="Şifre Giriniz.." > *@
						@* 	@Html.TextBoxFor(x=>x.Sifre,new {@class="form-control"} ) *@
							@Html.PasswordFor(x=>x.Sifre,new {@class="form-control"})
							@Html.ValidationMessageFor(x=>x.Sifre,"", new {@style="color:red"})
						</div>
						<div class="form-group col-md-6 mb-3">
							<label for="exampleInputPassword2 mb-2">Resim Ekle</label>
							<input type="file" class="form-control" id="password2" placeholder="" >
						</div>
					</div>
					
					<button type="submit" class="btn btn-primary submit mb-4">Kaydet</button>
					<p>
						<a href="#" class="fa-check" id="tik" >Şartları okudum, kabul ettim.</a>
					</p>
				</form>

			</div>
		</div>
	</div>
</section>
