
@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/Yazar_Layout.cshtml";
}
@using EntityLayer.Entity
@model AppUser
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Sayfası</h4>
            <p class="card-description">Profil Bilgileriniz. </p>
            <div class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Adı</label>
                    <input type="text" class="form-control" id="exampleInputName1" value="@Model.UserName" readonly placeholder="">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyadı</label>
                    <input type="text" class="form-control" id="exampleInputName1" value="@Model.SurName" readonly placeholder="">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email adresi</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" placeholder="" value="@Model.Email" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="" value="" readonly>
                </div>
                
                
                
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    <textarea  class="form-control"  rows="4" readonly>@Model.Hakkinda</textarea> 
                </div>
                <a href="/User/ProfilGuncelle" class="btn btn-gradient-primary mr-2">Güncelle</a>
                <a href="/DashBoard/Index" class="btn btn-light">iptal</a>
            </div>
        </div>
    </div>
</div>

