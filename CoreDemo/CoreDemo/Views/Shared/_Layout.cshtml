	<script>
		$("#ara").on("input",function () {
			var deger = $(this).val();
		
			const url = window.location.href;
			
			if(url.includes("https://localhost:44342/Blok")) 
			{
				
				$.ajax({
					type: "GET",
					url: "/Blok/Invoke/"+deger,
				
					dataType:"html",
					success: function (veri) {
						
						$("#body").html(veri);
							
					},
					error: function (veri) {
						alert("hata");
					}
				});
			}
		});
