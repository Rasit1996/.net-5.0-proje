
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
@using EntityLayer.Entity
@model List<Kategori>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Kategori Listesi</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li>
                            <a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Blog Sayısı</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Adi</td>
                                <td>@item.bloks.Count()</td>
                                <td><a href="#" class="btn btn-danger sil" data-id="@item.ID">Sil</a></td>
                                <td><a href="/Admin/Kat/Duzenle/@item.ID" class="btn btn-info">Düzenle</a></td>

                            </tr>
                        }
                        
                        
                        
                    </tbody>
                </table>
                <a href="/Admin/Kat/Ekle" class="btn btn-warning">Yeni Kategori Ekle</a>
                <a href="/Admin/Dosyala/ExeleAktar" class="btn btn-info">Exel Dosyası Oluştur</a>
            </div>
        </div>
    </div>
    
</div>
@section script{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".sil").click(function () {

            Swal.fire({
                title: "Simek İstediğine Emin Misin?",
                text: "Bunu geri alamazsınız!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                cancelButtonText: "İptal",
                confirmButtonText: "Evet, Si!"
            }).then((result) => {
                if (result.isConfirmed) {
                    var id = $(this).data("id");
                    $.ajax({
                        type: "POST",
                        url: "/Admin/Kat/Sil/"+id,
                        
                        success: function () {
                            Swal.fire({
                                title: "Silindi!",
                                text: "Dosyanız silindi.",
                                icon: "success",
                                confirmButtonText: "Tamam"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    location.reload();
                                }
                            });
                        },
                        error: function () {
                            alert("Hata");
                        }
                    })
                }
            });
        })
    </script>
}

