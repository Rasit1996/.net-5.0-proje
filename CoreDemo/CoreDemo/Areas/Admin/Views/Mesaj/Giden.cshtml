
@{
    ViewData["Title"] = "Giden";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

@using EntityLayer.Entity
@model List<MesajUser>
<div class="wrapper wrapper-content">
    <div class="row">
        @await Html.PartialAsync("/Areas/Admin/Views/Mesaj/SolMenu.cshtml")
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">

                <form method="get" action="index.html" class="float-right mail-search">
                    <div class="input-group">
                        <input type="text" class="form-control form-control-sm" name="search" placeholder="Search email">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-sm btn-primary">
                                Ara
                            </button>
                        </div>
                    </div>
                </form>
                <h2>
                    Giden (@ViewBag.giden)
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">
                    <div class="btn-group float-right">
                        <button class="btn btn-white btn-sm"><i class="fa fa-arrow-left"></i></button>
                        <button class="btn btn-white btn-sm"><i class="fa fa-arrow-right"></i></button>

                    </div>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="left" title="Refresh inbox"><i class="fa fa-refresh"></i>Yenile</button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Okundu olarak işaretle"><i class="fa fa-eye"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Önemli olarak işaretle"><i class="fa fa-exclamation"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" href="#" id="sil" data-placement="top" title="Çöp kutusuna taşı"><i class="fa fa-trash-o"></i> </button>

                </div>
            </div>
            <div class="mail-box">

                <table class="table table-hover table-mail">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="unread">
                                <td class="check-mail">
                                    <input type="checkbox" class="i-checks"  data-id="@item.ID">
                                </td>
                                <td class="mail-ontact"><a href="mail_detail.html">@item.Alici.UserName</a></td>
                                <td class="mail-subject"><a href="mail_detail.html">@item.Konu</a></td>

                                <td class="text-right mail-date">@item.Tarih.ToShortDateString()</td>
                            </tr>
                        }


                    </tbody>
                </table>


            </div>
        </div>
    </div>
@section script{
    <script>
        $("#sil").click(function () {
            var degerler = [];
                $(".icheckbox_square-green.checked .i-checks").each(function () {
                var deger = $(this).data("id");
                
                degerler.push(deger);
            })
           
                var jsonvalue = JSON.stringify(degerler);
            var href = "Sil/" + "?dizi=" + encodeURIComponent(jsonvalue);
         
            window.location.href = href;
        })
    </script>
}


